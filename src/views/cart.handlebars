<div>
    <h1>Tu Carrito</h1>

    {{#if cart.products.length}}
        <ul>
            {{#each cart.products}}
                <li>
                    <h3>{{this.product.title}}</h3>
                    <p><strong>Cantidad:</strong> {{this.quantity}}</p>
                    <p><strong>Precio unitario:</strong> ${{this.product.price}}</p>
                    <p><strong>Total:</strong> ${{multiply this.quantity this.product.price}}</p>
                    <button class="remove-from-cart" data-cart-id="{{../cart._id}}" data-product-id="{{this.product._id}}">Eliminar</button>
                </li>
            {{/each}}
        </ul>

        <!-- Botón para vaciar el carrito -->
        <button id="clear-cart" data-cart-id="{{cart._id}}">Vaciar Carrito</button>
    {{else}}
        <p>Tu carrito está vacío.</p>
    {{/if}}

    <a href="/">Seguir comprando</a>
</div>

<script src="/js/cart.js"></script>